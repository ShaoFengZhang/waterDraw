.rule-bg{
  position: fixed;
  width:100%;
  height:100%;
  background:rgba(0,0,0,0.5);
  left:0;
  top:0;
  z-index:9999
}
.rule-box{
  width:450rpx;
  height:700rpx;
  position: absolute;
  top:50%;
  left:50%;
  margin-top:-350rpx;
  margin-left:-225rpx;
}
.rule-title{
  margin-bottom: 30rpx;
  color:#F95959
}
.rule-main{
  background:#fff;
  width:450rpx;
  height:505rpx;
  border-radius:20rpx;
  padding:50rpx 15rpx 0;
    animation: scalePopup 0.5s ease;
}
.rule-text{
  font-size:26rpx;
  line-height:60rpx;
  padding-left:35rpx;
  position: relative;
  margin-bottom: 30rpx
}

.rule-cirle{
  width:26rpx;
  height:26rpx;
  border-radius: 100%;
  background:#F95959;
  line-height:26rpx;
  text-align: center;
  position: absolute;
  left:0;
  top:18rpx;
  color:#fff;
  font-size:24rpx
}

.rule-close-img{
  width:70rpx;
  height:70rpx;
  position: absolute;
  bottom:0;
  left:190rpx;
   animation: rotation 0.5s ease;
}