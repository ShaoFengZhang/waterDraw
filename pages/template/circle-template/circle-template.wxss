.circle {
  width: 18rpx;
  height: 18rpx;
  background: #eff2f9;
  border-radius: 100%;
  animation: magnify 3s ease-out;
  animation-iteration-count: infinite;
  margin: 0 4rpx;
}

.circle2 {
  animation-delay: 0.2s;
  -webkit-animation-delay: 0.2s;
}

.circle3 {
  animation-delay: 0.4s;
  -webkit-animation-delay: 0.4s;
}

.circle4 {
  animation-delay: 0.6s;
  -webkit-animation-delay: 0.6s;
}

.circle5 {
  animation-delay: 0.8s;
  -webkit-animation-delay: 0.8s;
}

.circle-main-part {
  width: 50%;
}

/* 产生动画（向外扩散变大）的圆圈  */

.ripples {
  width: 180rpx;
  height: 180rpx;
  border-radius: 100%;
  margin: 0 auto;
  position: relative;
}

.center {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  left: 0;
  top: 0;
  background: #f95959;
  border-radius: 100%;
  z-index: 99;
  padding-top: 30rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  letter-spacing: 5px;
}

.center.greenCenter {
  background: #2aa344;
}

.center .text {
  color: #fff;
  font-size: 40rpx;
  line-height: 60rpx;
}

.pulse {
  position: absolute;
  width: 180rpx;
  height: 180rpx;
  left: 0;
  top: 0;
  background: #f95959;
  border-radius: 100%;
  z-index: 1;
  animation: living 2s linear infinite;
  -webkit-animation: living 2s linear infinite;
}

.pulse.pulse2 {
  animation-delay: 1s;
  -webkit-animation-delay: 1s;
}

.pulse-green {
  background: #2aa344;
}

.pulse-purple {
  background: #f90087;
}

