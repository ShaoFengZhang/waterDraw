.rule-bg {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  left: 0;
  top: 0;
  z-index: 9999;
}

.rule-box {
  width: 600rpx;
  height: 800rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -400rpx;
  margin-left: -300rpx;
}

.rule-title {
  margin-bottom: 30rpx;
  color: #f95959;
}

.rule-main {
  background: #fff;
  width: 560rpx;
  height: 600rpx;
  border-radius: 20rpx;
  padding: 50rpx 20rpx 0;
  animation: scalePopup 0.5s ease;
}

.rule-text {
  font-size: 34rpx;
  line-height: 80rpx;
  padding-left: 35rpx;
  position: relative;
  margin-bottom: 30rpx;
}

.rule-cirle {
  width: 30rpx;
  height: 30rpx;
  border-radius: 100%;
  background: #f95959;
  line-height:30rpx;
  text-align: center;
  position: absolute;
  left: 0;
  top: 24rpx;
  color: #fff;
  font-size: 24rpx;
}

.rule-close-img {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-left:-35rpx;
  animation: rotation 0.5s ease;
}
