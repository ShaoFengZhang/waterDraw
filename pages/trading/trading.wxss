@import "../template/rule2-template/rule2-template.wxss";
@import "../template/animation.wxss";
@import "../template/prize-popup/prize-popup.wxss";
@import "../template/prize-popup2/prize-popup2.wxss";
@import "../template/bottom/bottomItem.wxss";

.balance {
  width: 100%;
  padding: 30rpx 0;
  background: url('https://tp.datikeji.com/a/15380410272232/NclfVzu6FB55iePfAFGRuJTaGE5sB7C8phYrghxq.png') no-repeat bottom;
  background-size: 750rpx 150rpx;
}

.draw-img {
  width: 250rpx;
  height: 80rpx;
}

.money {
  font-size: 60rpx;
  color: #000;
  height: 60rpx;
  line-height: 60rpx;
  font-weight: bold;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 25rpx;
}

.grading {
  padding: 30rpx 50rpx;
}

.reward-list {
  padding: 20rpx 0;
}

.reward-item {
  width: 25%;
  height: 140rpx;
  border-right: 1px solid #d9d9d9;
}

.reward-item:last-child {
  border-right: none;
}

.reward-img {
  width: 120rpx;
  height: 60rpx;
}

.reward-name {
  font-size: 26rpx;
}

.reward-value {
  font-size: 20rpx;
}

.bill {
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  background: #eff2f9;
  text-align: center;
}

.bill-main {
  padding-bottom: 30rpx;
}

.bill-item {
  padding-left: 120rpx;
  position: relative;
}

.bill-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 100%;
  position: absolute;
  left: 35rpx;
  top: 30rpx;
}

.bill-right {
  width: 100%;
  height: 120rpx;
  padding-right: 45rpx;
  border-bottom: 1px solid #d9d9d9;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.bill-info {
  line-height: 40rpx;
}
