@import "../template/rule2-template/rule2-template.wxss";
@import "../template/animation.wxss";
@import "../template/prize-popup/prize-popup.wxss";
@import "../template/prize-popup2/prize-popup2.wxss";
@import "../template/bottom/bottomItem.wxss";
.balance {
  padding: 60rpx 40rpx 30rpx;
}

.icon-img {
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top: -4rpx;
  margin-right: 25rpx;
}

.grading {
  padding: 30rpx 50rpx;
}

.reward-list {
  padding: 20rpx 0;
}

.reward-item {
  width: 25%;
  height: 140rpx;
  border-right: 1px solid #D9D9D9;
}

.reward-item:last-child {
  border-right: none;
}

.reward-img {
  width: 120rpx;
  height: 60rpx;
}

.reward-name {
  font-size: 26rpx;
}

.reward-value {
  font-size: 20rpx;
}

.bill {
  width: 100%;
  height: 55rpx;
  line-height: 55rpx;
  background: #eff2f9;
  text-align: center;
}

.bill-main{
  padding-bottom:30rpx
}

.bill-item {
  padding-left: 170rpx;
  position: relative;
}

.bill-img {
  width: 90rpx;
  height: 90rpx;
  border-radius: 100%;
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}

.bill-right {
  width: 100%;
  height: 150rpx;
  padding: 30rpx 50rpx 30rpx 0;
  border-bottom: 1px solid #D9D9D9;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

.bill-info {
  line-height: 40rpx;
}
