.prize-info {
  width: 700rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 0 18rpx rgba(0, 0, 0, 0.26);
  position: relative;
}

.prize-img {
  width: 100%;
  height: 280rpx;
}

.prize-info-active .prize-main {
  background: #eff2f9;
}

.prize-main {
  height: 120rpx;
  padding: 0 25rpx;
  background: #fff;
}

.prize-name {
  font-size: 32rpx;
  color: #1b1b1b;
  line-height: 50rpx;
}

.prize-time {
  font-size: 26rpx;
  color: #818181;
  line-height: 50rpx;
}

.prize-drawBtn {
  width: 150rpx;
  height: 48rpx;
  line-height: 48rpx;
  background: #fccf00;
  border-radius: 24rpx;
  color: #000;
  font-size: 26rpx;
  text-align: center;
  letter-spacing: 1px;
}

.prize-drawBtn.active {
  background: #efefef;
  color: #666;
}

.prize-sponsors {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  letter-spacing: 1px;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
