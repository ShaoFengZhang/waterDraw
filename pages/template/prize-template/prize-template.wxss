.prize-info {
  width: 700rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 0 18rpx rgba(0, 0, 0, 0.26);
  position: relative;
}

.prize-img {
  width: 100%;
  height: 280rpx;
}

.prize-info-active .prize-main {
  background: #eff2f9;
}

.prize-main {
  height: 140rpx;
  padding: 0 25rpx;
  background: #fff;
}

.prize-name {
  font-size: 40rpx;
  color:#1B1B1B
}

.prize-time {
  font-size: 28rpx;
  color: #666;
  line-height: 60rpx;
}

.prize-drawBtn {
  width: 190rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #F92D17;
  border-radius: 25rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  letter-spacing: 1px;
}

.prize-drawBtn.active {
  background: #66C47A
}

.prize-sponsors {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  background: rgba(0, 0, 0, 0.4);
  color: #fff;
  letter-spacing: 1px;
  text-align: center;
  position: absolute;
  top: 0;
  right: 0;
  border-bottom-left-radius: 8rpx;
  border-top-right-radius: 8rpx;
}
