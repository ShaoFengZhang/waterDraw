@import "../template/bottom/bottomItem.wxss";
page {
  background: #e5e5e5;
}

.nav {
  padding: 40rpx 70rpx;
}

.nav-item {
  width: 50%;
  text-align: center;
  height: 76rpx;
  line-height: 76rpx;
  letter-spacing: 1px;
  color: #353535;
  font-size: 32rpx;
  position: relative
}
.nav-item .icon-img{
width:77rpx;
height:39rpx;
top:-25rpx;
left:120rpx;

}

.nav-menu {
  border-radius: 38rpx;
}

.nav-item.active {
  background: #fddd4a;
  color: #000;
  border-radius: 38rpx;
}

.main {
  padding: 0 20rpx 130rpx;
}

.winner-info {
  width: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 35rpx 20rpx 25rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: #fff;
}

.winner-info2 {
  width: 100%;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  background: #fff;
}

.prize-img {
  width: 400rpx;
  height: 160rpx;
  border-radius: 10rpx;
}

.right-con {
  width: 270rpx;
}

.name-text {
  width: 270rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 40rpx;
  line-height: 40rpx;
}

.name-text2 {
  width: 180rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 40rpx;
  line-height: 40rpx;
}

.icon-img {
  width: 115rpx;
  height: 58rpx;
  position: absolute;
  top: -40rpx;
  left: -8rpx;
}

.icon-img2 {
  width: 40rpx;
  height: 59rpx;
}

.index-text {
  text-align: center;
  width: 40rpx;
}

.img-box {
  position: relative;
}

.head-img {
