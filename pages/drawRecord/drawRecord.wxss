@import "../template/prize-template/prize-template.wxss";
page {
  background: #F1F1F1;
  padding-bottom:30rpx
}

.nav {
  padding:40rpx 70rpx;
  background:#E5E5E5;
  margin-bottom: 40rpx
}

.nav-item {
  width: 50%;
  text-align: center;
  height: 76rpx;
  line-height: 76rpx;
  letter-spacing: 1px;
  color:#353535;
  font-size:32rpx;
}
.nav-menu{
  border-radius: 38rpx;
  overflow: hidden
}

.nav-item.active {
  background:#FDDD4A;
  color:#000;
  border-radius: 38rpx;
}


.prize-item {
  width:100%;
  padding: 30rpx 50rpx;
  background: #fff;
  margin-bottom: 25rpx;
  height:140rpx;
  line-height:40rpx;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}

