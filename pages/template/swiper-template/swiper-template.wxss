.notice-box{
  width:500rpx;
  height:80rpx;
}
.notice-con{
  height:54rpx;
  overflow: hidden
}
.notice-info{
  display: inline-block;
  position: relative;
  padding-left:10rpx;
  height:48rpx;
  margin-top:17rpx;
  line-height:48rpx;
  border-radius: 24rpx;
  padding-right:10rpx;
  background:rgba(119,123,126,0.8);
  color:#fff;
  font-size:24rpx;
  letter-spacing: 1px;
  text-overflow:ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-width:500rpx;
  box-sizing: border-box;
}
.notice-header-img{
  width:40rpx;
  height:40rpx;
  border-radius: 100%;
  display: inline-block;
  vertical-align: middle;
  margin:-3rpx 10rpx 0
}
.horn-img{
  width:32rpx;
  height:32rpx;
  display: inline-block;
  vertical-align: middle;
  margin-top:-5rpx
}